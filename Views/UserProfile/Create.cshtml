@model MacroTracker.ViewModels.UserProfileViewModel


@{
    ViewData["Title"] = "Create Profile";
}

<h2>Create Profile</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="HeightFeet">Height (Feet)</label>
        <input asp-for="HeightFeet" class="form-control" type="number" />
        <span asp-validation-for="HeightFeet" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HeightInches">Height (Inches)</label>
        <input asp-for="HeightInches" class="form-control" type="number" />
        <span asp-validation-for="HeightInches" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="WeightInPounds"></label>
        <input asp-for="WeightInPounds" class="form-control" />
        <span asp-validation-for="WeightInPounds" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Age"></label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Gender"></label>
        <select asp-for="Gender" class="form-control">
            <option value="">Select Gender</option>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ActivityLevel"></label>
        <select asp-for="ActivityLevel" class="form-control">
            <option value="">Select Activity Level</option>
            <option value="Sedentary">Sedentary</option>
            <option value="Lightly Active">Lightly Active</option>
            <option value="Moderately Active">Moderately Active</option>
            <option value="Very Active">Very Active</option>
            <option value="Super Active">Super Active</option>
        </select>
        <span asp-validation-for="ActivityLevel" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create Profile</button>
</form>

<div>
    <a asp-action="Index">Back to Home</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
