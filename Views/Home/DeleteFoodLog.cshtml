@model MacroTracker.Models.UserFoodLog  // Use the UserFoodLog model for confirmation

@{
    ViewData["Title"] = "Confirm Deletion";
}

<h2>Are you sure you want to delete this food log entry?</h2>

<p>
    Food Item: @Model.FoodItem.Name <br />
    Serving Size: @Model.ServingSize @Model.FoodItem.ServingUnit <br />
    Calories: @Model.Calories
</p>

<form asp-action="DeleteFoodLog" method="post">
    <input type="hidden" asp-for="UserFoodLogId" />
    <button type="submit" class="btn btn-danger">Confirm Deletion</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

